  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "ui/main.ts"], 
  "exclude": ["node_modules"]
}